{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "lib": ["es2017", "DOM"],
        "allowJs": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}